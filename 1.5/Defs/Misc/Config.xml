<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <FirefliesTwoO.FFConfigDef>
        <defName>FF_Config</defName>

        <!-- MapComponent_FFNightlySpawning -->
        <allowedBiomes>
            <li>BorealForest</li>
            <li>TemperateForest</li>
            <li>TemperateSwamp</li>
            <li>TropicalRainforest</li>
            <li>TropicalSwamp</li>
            <li>AridShrubland</li>
            <li>Desert</li>
            <li>ExtremeDesert</li>
            <li MayRequire="Scurvyez.AlienBiomes">SZ_RadiantPlains</li>
            <li MayRequire="Scurvyez.AlienBiomes">SZ_DeliriousDunes</li>
            <li MayRequire="Scurvyez.AlienBiomes">SZ_CrystallineFlats</li>
        </allowedBiomes>

        <!-- particleEmissionRate / particlesMaxCount = ~num active at any one moment -->
        <particlesMaxCount>10000</particlesMaxCount> <!-- 25 -->
        <particleEmissionRate>100000000000</particleEmissionRate> <!-- 315 -->
        <particleLifetime>0.1</particleLifetime>
        <particleSizeFactor>0.3</particleSizeFactor>
        <particleVelocityFactor>0.0275</particleVelocityFactor>
        <startHour>19</startHour>
        <endHour>4</endHour>

        <!-- ParticleBuilder -->
        <shapeRandomDirectionAmount>0~360</shapeRandomDirectionAmount>
        <noiseOctaveCount>1</noiseOctaveCount>
        <noiseFrequency>1.5</noiseFrequency>
        <noisePositionAmount>1.75</noisePositionAmount>
        <noiseStrength>15</noiseStrength>
    </FirefliesTwoO.FFConfigDef>

</Defs>
