<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <FirefliesTwoO.FFConfigDef>
        <defName>FF_Config</defName>

        <!-- MapComponent_FFNightlySpawning -->
        <!-- if you patch into this, make sure the biome you're adding contains soil terrain (any kind of soil) -->
        <allowedBiomes>
            <li>BorealForest</li>
            <li>TemperateForest</li>
            <li>TemperateSwamp</li>
            <li>TropicalRainforest</li>
            <li>TropicalSwamp</li>
            <li>AridShrubland</li>
            <li>Desert</li>
            <li>ExtremeDesert</li>
            <li MayRequire="Scurvyez.AlienBiomes">SZ_RadiantPlains</li>
            <li MayRequire="Scurvyez.AlienBiomes">SZ_DeliriousDunes</li>
            <li MayRequire="Scurvyez.AlienBiomes">SZ_CrystallineFlats</li>
        </allowedBiomes>

        <!--
        x = mapSize.x

        particlesMaxCountCurve.y =
        POW(particlesMaxCountCurve.x * (1/2) * (particlesMaxCountCurve.x * 0.01), 0.95)
        -->
        <particlesMaxCountCurve>
            <points>
                <li>(24, 3)</li>
                <li>(49, 11)</li>
                <li>(74, 23)</li>
                <li>(99, 40)</li>
                <li>(149, 88)</li>
                <li>(249, 233)</li>
                <li>(349, 442)</li>
                <li>(449, 713)</li>
            </points>
        </particlesMaxCountCurve>

        <!--
        x = mapSize.x

        particleEmissionRateCurve.y =
        particlesMaxCountCurve.y * (1/4)
        -->
        <particleEmissionRateCurve>
            <points>
                <li>(24, 1)</li>
                <li>(49, 3)</li>
                <li>(74, 6)</li>
                <li>(99, 10)</li>
                <li>(149, 22)</li>
                <li>(249, 58)</li>
                <li>(349, 110)</li>
                <li>(449, 178)</li>
            </points>
        </particleEmissionRateCurve>

        <particleLifetime>5</particleLifetime>
        <particleSizeFactor>0.3</particleSizeFactor>
        <startHour>19</startHour>
        <endHour>4</endHour>

        <!-- ParticleBuilder -->
        <shapeRandomDirectionAmount>0~360</shapeRandomDirectionAmount>
        <noiseOctaveCount>1</noiseOctaveCount>
        <noiseFrequency>1.5</noiseFrequency>
        <noisePositionAmount>0.33</noisePositionAmount>
        <noiseStrength>15</noiseStrength>
    </FirefliesTwoO.FFConfigDef>

</Defs>
