<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationSequence">
        <operations>
            <li Class="PatchOperationAddModExtension">
                <xpath>Defs/BiomeDef[defName="SZ_RadiantPlains"]</xpath>
                <value>
                    <li Class="FirefliesTwoO.NightlySpawningExtension">
                        <biomeEmissionRate>1.2</biomeEmissionRate>
                        <biomeAllowedTempRange>-100~100</biomeAllowedTempRange>
                        <biomeAllowInWinter>false</biomeAllowInWinter>
                    </li>
                </value>
            </li>
            <li Class="PatchOperationAddModExtension">
                <xpath>Defs/BiomeDef[defName="SZ_DeliriousDunes"]</xpath>
                <value>
                    <li Class="FirefliesTwoO.NightlySpawningExtension">
                        <biomeEmissionRate>0.7</biomeEmissionRate>
                        <biomeAllowedTempRange>-100~100</biomeAllowedTempRange>
                        <biomeAllowInWinter>true</biomeAllowInWinter>
                    </li>
                </value>
            </li>
            <li Class="PatchOperationAddModExtension">
                <xpath>Defs/BiomeDef[defName="SZ_CrystallineFlats"]</xpath>
                <value>
                    <li Class="FirefliesTwoO.NightlySpawningExtension">
                        <biomeEmissionRate>0.9</biomeEmissionRate>
                        <biomeAllowedTempRange>-100~100</biomeAllowedTempRange>
                        <biomeAllowInWinter>false</biomeAllowInWinter>
                    </li>
                </value>
            </li>
        </operations>
    </Operation>

</Patch>