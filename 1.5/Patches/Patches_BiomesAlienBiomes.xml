<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Alien Biomes</li>
        </mods>

        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAddModExtension">
                    <xpath>Defs/BiomeDef[defName="SZ_RadiantPlains"]</xpath>
                    <value>
                        <li Class="FirefliesTwoO.NightlySpawningExtension">
                            <biomeEmissionRate>1.2</biomeEmissionRate>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAddModExtension">
                    <xpath>Defs/BiomeDef[defName="SZ_DeliriousDunes"]</xpath>
                    <value>
                        <li Class="FirefliesTwoO.NightlySpawningExtension">
                            <biomeEmissionRate>0.7</biomeEmissionRate>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationAddModExtension">
                    <xpath>Defs/BiomeDef[defName="SZ_CrystallineFlats"]</xpath>
                    <value>
                        <li Class="FirefliesTwoO.NightlySpawningExtension">
                            <biomeEmissionRate>0.9</biomeEmissionRate>
                        </li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

</Patch>