<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationSequence">
        <operations>
            <li Class="PatchOperationAddModExtension">
                <xpath>Defs/BiomeDef[defName="AB_FeraliskInfestedJungle"]</xpath>
                <value>
                    <li Class="FirefliesTwoO.NightlySpawningExtension">
                        <biomeEmissionRate>3.2</biomeEmissionRate>
                        <biomeAllowedTempRange>-100~100</biomeAllowedTempRange>
                        <biomeAllowInWinter>true</biomeAllowInWinter>
                    </li>
                </value>
            </li>
            <li Class="PatchOperationAddModExtension">
                <xpath>Defs/BiomeDef[defName="AB_IdyllicMeadows"]</xpath>
                <value>
                    <li Class="FirefliesTwoO.NightlySpawningExtension">
                        <biomeEmissionRate>5.2</biomeEmissionRate>
                        <biomeAllowedTempRange>-100~100</biomeAllowedTempRange>
                        <biomeAllowInWinter>false</biomeAllowInWinter>
                    </li>
                </value>
            </li>
        </operations>
    </Operation>

</Patch>